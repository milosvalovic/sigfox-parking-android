<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/sigfox_gradient"
    app:carbon_cornerRadius="12dp"
    app:carbon_elevation="5dp">


    <carbon.widget.LinearLayout
        android:id="@+id/selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/semi_transparent_white"
        android:orientation="vertical">

        <carbon.widget.RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <carbon.widget.TextView
                android:id="@+id/carName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:text="Názov"
                android:textColor="@color/gradient_end"
                android:layout_toStartOf="@id/deleteCar"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/deleteCar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close"
                app:tint="@color/red_gradient_end"
                android:layout_alignParentEnd="true"/>
        </carbon.widget.RelativeLayout>

        <carbon.widget.TextView
            android:id="@+id/color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="Farba: Neznáma"
            android:textColor="@color/carbon_blueGrey_500"
            android:textSize="15sp" />

        <carbon.widget.RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:carbon_cornerRadius="5dp"
            app:carbon_stroke="@color/hint_gray"
            app:carbon_strokeWidth="1dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sigfox_gradient" />

            <carbon.widget.TextView
                android:id="@+id/licancePlate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="2dp"
                android:text="XX-XXXXXy"
                android:textAlignment="center"
                android:textColor="@color/carbon_blueGrey_500"
                android:textSize="35sp" />

        </carbon.widget.RelativeLayout>


    </carbon.widget.LinearLayout>


</carbon.widget.RelativeLayout>
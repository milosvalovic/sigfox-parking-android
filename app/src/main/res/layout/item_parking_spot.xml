<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/free_background"
    android:layout_marginStart="20dp">

        <carbon.widget.TextView
            android:id="@+id/spotNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <carbon.widget.TextView
            android:id="@+id/currentOccupancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="@string/currently_occupied"
            android:textColor="@color/gradient_end"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/charger"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_charger"/>

        <ImageView
            android:id="@+id/occupied"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_car"/>

        <carbon.widget.RelativeLayout
            android:id="@+id/reserve"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:background="@drawable/white_input_gradient"
            android:layout_alignParentBottom="true"
            android:onClick="login"
            app:carbon_cornerRadius="10dp">

                <carbon.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/reserve"
                    android:textColor="@color/gradient_end"
                    android:textSize="15sp" />

        </carbon.widget.RelativeLayout>


        <carbon.widget.RelativeLayout
            android:id="@+id/reserved"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:onClick="login"
            app:carbon_cornerRadius="10dp">

                <carbon.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/reserved_for_tomorow"
                    android:textColor="@color/purple_200"
                    android:textSize="15sp" />

        </carbon.widget.RelativeLayout>


</carbon.widget.RelativeLayout>